<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#292929"
    android:orientation="vertical"
    android:padding="10dip">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/productEditor_productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".2"                android:text="@string/producteditor_product"
                android:textColor="#ffff"
                android:layout_gravity="center|end"/>

            <EditText
                android:id="@+id/productEditor_productName_editable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Product Name"
                android:autofillHints="Store Name"
                android:textColorHint="#7C7C7C"
                android:textColor="#FFFFFF"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/productEditor_storeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:text="@string/producteditor_shop"
                android:textColor="#ffff"
                android:layout_gravity="center|end"/>

            <EditText
                android:id="@+id/productEditor_storeName_editable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:ems="10"
                android:inputType="textPersonName"
                android:autofillHints="Name"
                android:hint="Name"
                android:textColorHint="#7C7C7C"
                android:textColor="#FFFFFF"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/productEditor_productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".2"                android:text="@string/producteditor_price"
                android:textColor="#ffff"
                android:layout_gravity="center|end"/>

            <EditText
                android:id="@+id/productEditor_productPrice_editable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:ems="10"
                android:inputType="textPersonName"
                android:autofillHints="$$$"
                android:hint="$$$"
                android:textColorHint="#7C7C7C"
                android:textColor="#FFFFFF"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/productEditor_dealDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".2"                android:text="@string/producteditor_deal"
                android:textColor="#ffff"
                android:layout_gravity="center|end"/>

            <EditText
                android:id="@+id/productEditor_dealDescription_editable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:ems="10"
                android:autofillHints="Description"
                android:hint="Description"
                android:inputType="textPersonName"
                android:textColorHint="#7C7C7C"
                android:textColor="#FFFFFF"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


